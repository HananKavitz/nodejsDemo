{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": "./dist",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "strict": true,
        "lib": [ "es2015" ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}